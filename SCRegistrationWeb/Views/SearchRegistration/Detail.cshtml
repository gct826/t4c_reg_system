@model IEnumerable<SCRegistrationWeb.Models.RegistrationEntry>

@{
    ViewBag.Title = "Registration Detail";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script> 
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>@ViewBag.Message</h2>

@if (ViewBag.Found == false)
{
}
else
{
    <fieldset>
        <legend>Modify</legend>
        @foreach (var item in Model) 
        {

        <table class="context" style="width:600px;">
            <tr class="display-label">
                <td>        
                    @Html.DisplayNameFor(model => model.RegistrationID)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Email)
                </td>
                <td>        
                    @Html.DisplayNameFor(model => model.Phone)
                </td>
            </tr>

            <tr class="display-field">
                <th>
                    @Html.DisplayFor(modelItem => item.RegistrationID)
                </th>
                <th>        
                    @Html.DisplayFor(modelItem => item.Email)
                </th>
                <th>        
                    @String.Format("{0:###-###-####}", Convert.ToInt64(item.Phone))
                </th>
            </tr>
            


            @if (item.IsConfirmed)
            {
                <p>This registration has been confimed. To modify the registration please click the Edit bottom.</p>
                <input type="button" title="Edit Registration" value="Edit Registration" onclick="location.href='@Url.Action("Unlock", new {RegUID = item.RegistrationUID})'" />
            }   
                        
        </table>
        
        Html.RenderAction("Index", "Participant", new { RegUID = item.RegistrationUID });
            
        }
 
    </fieldset>
}