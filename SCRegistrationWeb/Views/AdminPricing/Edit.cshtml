@model SCRegistrationWeb.Models.RegPrice

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>RegPrice</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.AgeRangeID, "AgeRange")
        </div>
        <div class="editor-field readonly">
            @Html.TextBoxFor(model => model.AgeRange.Name, new { disabled = "disabled", @readonly = "readonly" })
            @Html.HiddenFor(model => model.AgeRangeID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PartTimePrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PartTimePrice)
            @Html.ValidationMessageFor(model => model.PartTimePrice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FullTimePrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FullTimePrice)
            @Html.ValidationMessageFor(model => model.FullTimePrice)
        </div>

        <p>
            <input type="submit" value="Save" />
            <input type="button" value="Cancel" onclick="location.href='@Url.Action("TableModification","Admin")'" />

        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
