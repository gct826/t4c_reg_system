@model SCRegistrationWeb.Models.RegistrationEntry

@{
    ViewBag.Title = "Edit";
}
<div id="main-wrapper">
	<div class="12u" id="main-content">
		<div class="5grid-layout">
            @if (ViewContext.RouteData.Values["language"].ToString() == "en")
            {
                <h2>Edit Registration Info</h2>
            }
            @if (ViewContext.RouteData.Values["language"].ToString() == "ch")
            {
                <h2>修改注册信息</h2>
            }

            @using (Html.BeginForm()) {
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>RegistrationEntry</legend>

                    <div class="message-error">
                    @if(ViewBag.Message != null)
                    {
                        @ViewBag.Message
                    }
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.RegistrationID)
                    </div>
                    <div class="editor-field readonly">
                        @Html.TextBoxFor(model => model.RegistrationID, new { disabled = "disabled", @readonly = "readonly" })
                        @Html.HiddenFor(model => model.RegistrationID)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Email)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Phone)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>

                    <p>
                        @if (ViewContext.RouteData.Values["language"].ToString() == "en")
                        {
                            <input type="submit" value="Save" />
                            <input type="button" value="Back" onclick="location.href='@Url.Action("Modify", "Register", new { RegUID = ViewBag.RegUID })'" />
                        }
                        @if (ViewContext.RouteData.Values["language"].ToString() == "ch")
                        {
                            <input type="submit" value="保存" />
                            <input type="button" value="返回" onclick="location.href='@Url.Action("Modify", "Register", new { RegUID = ViewBag.RegUID })'" />
                        }
                    </p>
                </fieldset>
            }

        </div> 
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
